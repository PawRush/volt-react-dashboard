{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Hosting resource for Amplify React Dashboard",
  "Resources": {
    "AmplifyBuildRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": "amplify.amazonaws.com"
              },
              "Action": "sts:AssumeRole"
            }
          ]
        },
        "ManagedPolicyArns": [
          "arn:aws:iam::aws:policy/AdministratorAccess"
        ]
      }
    }
  },
  "Outputs": {
    "AmplifyBuildRoleArn": {
      "Value": {
        "Fn::GetAtt": [
          "AmplifyBuildRole",
          "Arn"
        ]
      }
    }
  }
}
